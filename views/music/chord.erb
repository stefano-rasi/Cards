\version "2.24.1"

#(set-global-staff-size <%= @scale %>)

<%
    if @clef == 'bass'
        fixed = 'c'
    else
        fixed = "c'"
    end
%>

\fixed <%= fixed %> {
    \key <%= @key %>
    \clef <%= @clef %>

    \override Score.BarLine.stencil = ##f
    \override Score.TimeSignature.stencil = ##f

    < <%= @notes %> ><%= @duration %>
}