\version "2.24.1"

#(set-global-staff-size 20)

upper = \fixed c' {
    \key <%= @key %>
    \time <%= @time %>
    \clef <%= @staves[:upper][:clef] %>

    \override Score.BarLine.stencil = ##f
    \override Score.TimeSignature.stencil = ##f

    <%= @staves[:upper][:notes] %>
}

lower = \fixed c {
    \key <%= @key %>
    \time <%= @time %>
    \clef <%= @staves[:lower][:clef] %>

    \override Score.BarLine.stencil = ##f
    \override Score.TimeSignature.stencil = ##f

    <%= @staves[:lower][:notes] %>
}

\new PianoStaff
<<
    \new Staff = "upper" \upper
    \new Staff = "lower" \lower
>>